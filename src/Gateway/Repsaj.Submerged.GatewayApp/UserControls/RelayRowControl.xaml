<UserControl
    x:Class="Repsaj.Submerged.GatewayApp.UserControls.RelayRowControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Repsaj.Submerged.GatewayApp.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="40"
    d:DesignWidth="120">

    <Border x:Name="borMain" Height="40">
        <Grid Style="{StaticResource submergedTileBackgroundColor}">
            <Grid.RowDefinitions>
            </Grid.RowDefinitions>
            <TextBlock Style="{StaticResource submergedTileTextBlockStyle}" Text="{Binding RelayName}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBlock Style="{StaticResource submergedTileTextBlockStyle}" Text="{Binding RelayState}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        </Grid>
    </Border>
</UserControl>
